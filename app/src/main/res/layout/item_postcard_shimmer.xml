<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp"
                android:id="@+id/relLayout1">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/profile_photo"
                    android:src="@color/colorPrimaryDark"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/profile_photo"
                    android:paddingStart="5dp">

                <RelativeLayout
                        android:id="@+id/usernameTv"
                        android:layout_width="140dp"
                        android:layout_height="20dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimaryDark"
                        />
                <RelativeLayout
                        android:id="@+id/locationTv"
                        android:layout_width="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="18dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_below="@+id/usernameTv"
                        />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:id="@+id/postBox"
                android:background="@color/white"
                android:layout_below="@+id/relLayout1">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/postImage"
                    android:src="@color/grey_400"
                    android:scaleType="centerCrop"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="7dp"
                    android:alpha="0.8"
                    android:background="@color/colorPrimaryDark">

                <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:id="@+id/postLikeTv"
                        android:layout_marginLeft="15dp"/>

                <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/iconLayout"
                        android:background="@color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/image_heart_red"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@drawable/ic_heart_red"
                            android:background="@color/transparent"
                            android:visibility="invisible"/>

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/image_heart_white"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@drawable/ic_heart_white"
                            android:visibility="visible"
                            android:layout_alignParentTop="true"/>

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/speech_bubble"
                            android:layout_toRightOf="@+id/image_heart_red"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="2dp"
                            app:srcCompat="@drawable/ic_comment"
                            android:visibility="visible"
                            />

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/imageScroll"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_above="@+id/postInfoBox"
                android:layout_marginBottom="55dp"
                android:orientation="horizontal"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postInfoBox"
                android:layout_below="@+id/postBox"
                android:padding="10dp"
                android:background="@color/white">

            <RelativeLayout
                    android:layout_width="280dp"
                    android:layout_height="28dp"
                    android:background="@color/grey_400"
                    android:id="@+id/image_likes"/>

            <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="18dp"
                    android:background="@color/grey_400"
                    android:id="@+id/postHashtags"
                    android:layout_below="@+id/image_likes"
                    android:layout_marginTop="15dp"/>

            <RelativeLayout
                    android:layout_width="360dp"
                    android:layout_height="38dp"
                    android:background="@color/grey_400"
                    android:layout_below="@+id/postHashtags"
                    android:id="@+id/image_comments_link"
                    android:layout_marginTop="15dp"/>

            <RelativeLayout
                    android:layout_width="280dp"
                    android:layout_height="18dp"
                    android:background="@color/grey_400"
                    android:layout_below="@+id/image_comments_link"
                    android:id="@+id/image_time_posted"
                    android:layout_marginTop="15dp"/>

        </RelativeLayout>

    </RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>


